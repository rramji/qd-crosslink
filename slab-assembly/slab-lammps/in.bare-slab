units                real
atom_style           full
boundary             p p p
dielectric           1
special_bonds        lj/coul 0.0 0.0 1.0
                     
pair_style           lj/charmm/coul/long/opt 9 10.00000
bond_style           none
angle_style          none
dihedral_style       none
improper_style       none
kspace_style         pppm 0.0001
                     
read_data            data.bare-slab
