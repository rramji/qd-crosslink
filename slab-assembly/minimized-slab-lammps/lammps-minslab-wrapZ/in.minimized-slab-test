units                real
atom_style           full
boundary             p p s
dielectric           1
special_bonds        lj/coul 0.0 0.0 1.0
                     
pair_style           lj/charmm/coul/charmm 20 25.00000
bond_style           harmonic
angle_style          harmonic
dihedral_style       harmonic
improper_style       none
#kspace_style         ewald 0.0001
                     
read_data            data.minimized-slab-test
                     
                     
                     
pair_modify          mix geometric
neighbor             2.0 multi
neigh_modify         every 2 delay 4 check yes
thermo_style         multi
thermo_modify        line multi format float %14.6f flush yes
variable             input string in.minimized-slab-test
variable             sname string minimized-slab-test
                     
group zn_s type 4 5
group oleic subtract all zn_s                     
group oxygen type 1                    

timestep            1
thermo_style multi
thermo 10
                     
print                .
print                ==========================================
print                "500 steps CG Minimization"
print                ==========================================
print                .
                     
dump                 1 all custom 25 ${sname}.min.lammpsdump id type xu yu zu vx vy vz
min_style            sd
minimize             1.0e-4 1.0e-4 500 5000
min_style            cg
minimize             1.0e-4 1.0e-4 500 5000
#now                 minimize the entire system
minimize             1.0e-4 1.0e-4 500 5000
undump               1
                   

                     
print                .
print                =====================================
print                "NVT dynamics to heat system"
print                =====================================
print                .
                     
reset_timestep       0
fix                  shakeH all shake 0.0001 20 500 m 1.0079
velocity             all create 0.0 12345678 dist uniform
thermo               100
dump                 1 all custom 1000 ${sname}.heat.lammpsdump id type xu yu zu vx vy vz
fix                  4 all nvt temp 1.0 300.0 100.0
fix freeze_zn_s zn_s setforce 0.0 0.0 0.0
fix restraint oxygen spring/self 100
run                  20000
unfix                4
unfix restraint
undump               1
  
print                .
print                =====================================
print                "NVT dynamics to heat system"
print                =====================================
print                .
                     
reset_timestep       0
fix                  shakeH all shake 0.0001 20 500 m 1.0079
velocity             all create 0.0 12345678 dist uniform
thermo               100
dump                 1 all custom 1000 ${sname}.equil_nvt.lammpsdump id type xu yu zu vx vy vz
fix                  4 all nvt temp 300.0 300.0 100.0
fix freeze_zn_s zn_s setforce 0.0 0.0 0.0
run                  80000
unfix                4
undump               1 
